// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id        String     @default(cuid()) @id
  userId    String
  title     String
  products  Product[]
  created_at    DateTime  @default(now())
}

model Product {
  id            String     @default(cuid()) @id
  name          String
  description   String
  price         Float
  Category      Category  @relation(fields: [categoryId], references: [id])
  categoryId    String
  created_at    DateTime  @default(now())
}
