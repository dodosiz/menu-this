// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id        String     @default(cuid()) @id
  userId    String
  title     String
  products  Product[]
  created_at    DateTime  @default(now())
}

model Product {
  id            String     @default(cuid()) @id
  name          String
  description   String
  price         Float
  Category      Category  @relation(fields: [categoryId], references: [id])
  categoryId    String
  created_at    DateTime  @default(now())
}

model Menu {
  id                       String     @default(cuid()) @id
  userId                   String
  title_color              String
  name_color               String
  description_color        String
  title_margin             Int
  name_margin              Int
  name_title_margin        Int
  title_size               String 
  name_size                String
  description_size         String
  title_font               String
  content_font             String 
  background_color         String
  template                 String?
}

model DeleteRequest {
  id            String     @default(cuid()) @id
  userId        String
  created_at    DateTime  @default(now())
}
