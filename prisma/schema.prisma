// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id        String     @default(cuid()) @id
  userId    String     @db.VarChar(50)
  title     String     @db.VarChar(50)
  background     String?     @db.VarChar(200)
  products  Product[]
  created_at    DateTime  @default(now())
}

model Product {
  id            String     @default(cuid()) @id
  name          String     @db.VarChar(100)
  description   String     @db.VarChar(250)
  price         Float
  Category      Category  @relation(fields: [categoryId], references: [id])
  categoryId    String    @db.VarChar(50)
  created_at    DateTime  @default(now())

  @@index([categoryId])
}

model Menu {
  id                       String     @default(cuid()) @id
  userId                   String
  brand_color              String     @db.VarChar(50) @default("#319795")
  title_color              String     @db.VarChar(50)
  name_color               String     @db.VarChar(50)
  description_color        String     @db.VarChar(50)
  brand_margin             Int        @default(10)
  title_margin             Int
  name_margin              Int
  name_title_margin        Int
  brand_size               String     @db.VarChar(50) @default("lg")
  title_size               String     @db.VarChar(50)
  name_size                String     @db.VarChar(50)
  description_size         String     @db.VarChar(50)
  brand_font               String     @db.VarChar(50) @default("'Open Sans', sans-serif")
  title_font               String     @db.VarChar(50)
  content_font             String     @db.VarChar(50)
  background_color         String     @db.VarChar(50)
  template                 String?    @db.VarChar(50)
}
