// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id            String     @default(cuid()) @id
  name          String     @db.VarChar(100)
  description   String     @db.VarChar(250)
  price         Float
  categoryId    String    @db.VarChar(50)
  created_at    DateTime  @default(now())

  @@index([categoryId])
}
